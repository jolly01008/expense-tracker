<div class="container">
  <div class="col-6 mx-auto">
    <div class="card card-body mt-5">
      <div class="d-flex">
        <label class="ms-5 mt-3">＊必填欄位</label>
        <h3 class="m-auto mt-1">請輸入你的支出</h3>
      </div>
      <form action="/records/new" method="POST" class="mt-3">
        <div class="d-flex mt-3">
          <label for="name" class="d-flex justify-content-end form-label me-5 mt-2" class="" style="width: 30%">名稱*:</label>
          <input type="text" name="name" id="name" class="form-control me-5" placeholder="ex. 早餐" required>
        </div>
        <div class="d-flex mt-3">
          <label for="date" class="d-flex justify-content-end form-label me-5 mt-2" class="" style="width: 30%">日期*:</label>
          <input type="date" name="date" id="date" class="form-control me-5" required>
        </div>
        <div class="d-flex mt-3">
          <label for="category" class="d-flex justify-content-end form-label me-5 mt-2" style="width: 30%">類別*:</label>
          <select class="form-select me-5" aria-label=".form-select category" name="categoryId" required>
            <option selected>選擇類別</option>
            {{#each categories}}
             <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
            
          </select>
        </div>
        <div class="d-flex mt-3">
          <label for="amount" class="d-flex justify-content-end form-label me-5 mt-2" style="width: 30%">金額*:</label>
          <input type="number" name="amount" id="amount" class="form-control me-5" min="0" max="999999999999" required>
        </div>
        <div class="d-flex justify-content-center ms-5">
          <button type="submit" class="btn btn-success mt-4" style="font-size:1.2em;width: 50%">新增支出</button>
        </div>
        <div class="d-flex justify-content-end ms-5">
          <a href="/" class="btn btn-outline-primary mt-3">回首頁</a>
        </div>
      </form>
    </div>
  </div>
</div>